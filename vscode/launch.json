{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Kernel C in QEMU",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/iso/boot/kernel.bin",
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "miDebuggerPath": "/opt/homebrew/bin/gdb",
            "preLaunchTask": "build-launch-kernel",
            "stopAtEntry": true,
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set architecture",
                    "text": "set architecture i386",
                    "ignoreFailures": false
                },
                {
                    "description": "Load kernel binary",
                    "text": "target remote localhost:1234",
                    "ignoreFailures": false
                },
                {
                    "description": "Load symbols",
                    "text": "file ${workspaceFolder}/iso/boot/kernel.bin",
                    "ignoreFailures": false
                }
            ],
            "externalConsole": false
        }
    ]
}
